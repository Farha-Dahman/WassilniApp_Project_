<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <style name="MainTheme" parent="MainTheme.Base">
	  <item name="colorPrimary">#5E7FFF</item>
	  <item name="colorPrimaryDark">#5E7FFF</item>
	  <item name="colorAccent">#5E7FFF</item>
	  <item name="android:datePickerDialogTheme">@style/CustomDatePickerDialog</item>
  </style>


  <style name="CustomDatePickerDialog" parent="ThemeOverlay.AppCompat.Dialog">
	  <!--header background-->
	  <item name="colorAccent">@color/colorPrimary</item>
	  <!--header textcolor-->
	  <item name="android:textColorPrimaryInverse">@android:color/white</item>
	  <!--body background-->
	  <item name="android:windowBackground">@android:color/white</item>
	  <!--selected day-->
	  <item name="android:colorControlActivated">@color/colorPrimary</item>
	  <!--days of the month-->
	  <item name="android:textColorPrimary">@color/colorPrimary</item>
	  <!--days of the week-->
	  <item name="android:textColorSecondary">@android:color/white</item>
	  <!--cancel&ok-->
	  <item name="android:textColor">@color/colorPrimary</item>
  </style>	
</resources>