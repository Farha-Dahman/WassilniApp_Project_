<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wassilni_App.views.ProfilePage"
             xmlns:forms="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin"
             xmlns:controls="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin">
    <ContentPage.Content>
        <StackLayout>
            <forms:CircleImage Source="{Binding PersonalPhoto}"
                   Aspect="AspectFit"
                   HeightRequest="150"
                   WidthRequest="150"
                   BorderColor="Gray"
                   BorderThickness="2"
                   Margin="0,45,0,20 "/>
            <Label Text="{Binding Name}" FontSize="Large" FontAttributes="Bold" TextColor="Black" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Margin="5,0,0,0" />
            <StackLayout  Margin="35,17,25,0" WidthRequest="0">
                <StackLayout  Margin="20" >
                    <StackLayout Orientation="Horizontal" VerticalOptions="Center" >
                        <Label Text="{StaticResource Phone}" TextColor="#5E7FFF" FontSize="Large" FontFamily="FAS" />
                        <Label Text="{Binding PhoneNumber}"  FontSize="Medium" Margin="5,0,0,0"/>
                    </StackLayout>
                    <BoxView HeightRequest="0.5" BackgroundColor="Gray" VerticalOptions="Center"/>
                </StackLayout>
                <StackLayout  Margin="20">
                    <StackLayout Orientation="Horizontal" VerticalOptions="Center" >
                        <Label Text="{StaticResource Email}" TextColor="#5E7FFF" FontSize="Large" FontFamily="FAS" />
                        <Label Text="{Binding Email}"  FontSize="Medium" Margin="5,0,0,0"/>
                    </StackLayout>
                    <BoxView HeightRequest="0.5" BackgroundColor="Gray" VerticalOptions="Center"/>
                </StackLayout>
                <StackLayout  Margin="20">
                    <StackLayout Orientation="Horizontal" VerticalOptions="Center" >
                        <Label Text="{StaticResource Gender}" TextColor="#5E7FFF" FontSize="Large" FontFamily="FAS" />
                        <Label Text="{Binding Gender}"  FontSize="Medium" Margin="5,0,0,0"/>
                    </StackLayout>
                    <BoxView HeightRequest="0.5" BackgroundColor="Gray" VerticalOptions="Center"/>
                </StackLayout>
                <StackLayout  Margin="20">
                    <StackLayout Orientation="Horizontal" VerticalOptions="Center" >
                        <Label Text="{StaticResource Birthday}" TextColor="#5E7FFF" FontSize="Large" FontFamily="FAS" />
                        <Label Text="{Binding Age}" FontSize="Medium" Margin="5,0,0,0" />
                    </StackLayout>
                    <BoxView HeightRequest="0.5" BackgroundColor="Gray" VerticalOptions="Center"/>
                </StackLayout>
            </StackLayout>
            <Button x:Name="Settings" Text="Settings" Clicked="GoToSettingsPage" ImageSource="{StaticResource arrow-right}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>






