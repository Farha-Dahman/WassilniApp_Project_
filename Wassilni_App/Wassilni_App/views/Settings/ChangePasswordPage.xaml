<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wassilni_App.views.Settings.ChangePasswordPage">
    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal">
            <Label Text="Change Password"
                   FontSize="24"
                   TextColor="White"
                   HorizontalOptions="StartAndExpand" />
        </StackLayout>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout Margin="20,40,20,20">

            <Frame Margin="0,5,0,0" Padding="2" HorizontalOptions="FillAndExpand" CornerRadius="10" HasShadow="False" BorderColor="Gray">
                <StackLayout Orientation="Horizontal" >
                    <Label Text="{StaticResource Email}" FontFamily="FAS"  FontSize="24" TextColor="{StaticResource colorPrimary}" Margin="9,10,0,0"/>
                    <Entry x:Name="EmailEntry" Placeholder="Email*" TextColor="#333333" FontSize="18" HorizontalOptions="FillAndExpand" Margin="10,0,0,0" />
                </StackLayout>
            </Frame>
            <Frame Margin="0,5,0,0" Padding="2" HorizontalOptions="FillAndExpand" CornerRadius="10" HasShadow="False" BorderColor="Gray">
                <StackLayout Orientation="Horizontal">
                    <Label Text="{StaticResource Key}" FontFamily="FAS" FontSize="24" TextColor="{StaticResource colorPrimary}" Margin="9,10,0,0"/>
                    <Entry Placeholder="Old Password" x:Name="OldPasswordEntry" IsPassword="True" TextColor="#333333" FontSize="18"  HorizontalOptions="FillAndExpand" Margin="10,0,0,0" />
                </StackLayout>
            </Frame>
            <Frame Margin="0,5,0,0" Padding="2" HorizontalOptions="FillAndExpand" CornerRadius="10" HasShadow="False" BorderColor="Gray">
                <StackLayout Orientation="Horizontal">
                    <Label Text="{StaticResource Key}" FontFamily="FAS" FontSize="24" TextColor="{StaticResource colorPrimary}" Margin="9,10,0,0"/>
                    <Entry  Placeholder="New Password" x:Name="NewPasswordEntry" IsPassword="True" TextColor="#333333" FontSize="18"  HorizontalOptions="FillAndExpand" Margin="10,0,0,0" />
                </StackLayout>
            </Frame>
            <StackLayout Margin="0,10,0,0">
                <Button Text="Change Password" Clicked="ChangePasswordButton_Clicked" FontSize="22" CornerRadius="15" Margin="0,10,0,0"/>
                <Button Text="Cancel" BackgroundColor="Gainsboro" TextColor="Black" Clicked="GoToSettingsPage" FontSize="22" CornerRadius="15" Margin="0,5,0,0"/>

            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>