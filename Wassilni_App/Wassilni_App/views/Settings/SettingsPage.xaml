<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wassilni_App.views.Settings.SettingsPage"
             NavigationPage.HasNavigationBar="false">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Settings page"
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button x:Name="BuEditProfile" VerticalOptions="Center" Text="Edit Profile" Clicked="GoToEditProfilePage"/>
            <Button x:Name="BuFAQs" VerticalOptions="Center" Text="FAQs Page" Clicked="GoToFAQsPage"/>
            <Button x:Name="BuContactUs" VerticalOptions="Center" Text="Contact us Page" Clicked="GoToContactUsPage"/>
            <Button x:Name="BuPrivacy_Terms" VerticalOptions="Center" Text="Privacy_Terms Page" Clicked="GoToPrivacy_TermsPage"/>
            <Button x:Name="BuChangePass" VerticalOptions="Center" Text="Change Password page" Clicked="GoToChangePassPage"/>
            <Button x:Name="BuLogout" VerticalOptions="Center" Text="Logout page" Clicked="btnLogout_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>